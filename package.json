{
  "name": "yor-css",
  "version": "1.0.0",
  "description": "A modern CSS library built with Sass and TypeScript",
  "main": "dist/css/yor-css.css",
  "scripts": {
    "build": "npm run sass:build && webpack --mode=production",
    "build:dev": "npm run sass:dev && webpack --mode=development",
    "dev": "npm run sass:dev & webpack serve --mode=development",
    "watch": "npm run sass:watch & webpack --mode=development --watch",
    "sass": "sass src/scss/yor-css.scss dist/css/yor-css.css --watch",
    "sass:dev": "sass src/scss/yor-css.scss dist/css/yor-css.css",
    "sass:build": "sass src/scss/yor-css.scss dist/css/yor-css.css --style=compressed",
    "sass:watch": "sass src/scss/yor-css.scss dist/css/yor-css.css --watch",
    "clean": "rm -rf dist/*"
  },
  "keywords": [
    "css",
    "framework",
    "sass",
    "bootstrap",
    "responsive",
    "ui"
  ],
  "author": "sdevawsm",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^20.0.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sdevawsm/yor-css.git"
  },
  "bugs": {
    "url": "https://github.com/sdevawsm/yor-css/issues"
  },
  "homepage": "https://github.com/sdevawsm/yor-css#readme"
}
